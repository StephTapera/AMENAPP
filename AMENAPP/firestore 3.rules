rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user is the owner of the document
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Check if the request only updates specific fields
    function onlyUpdatingFields(allowedFields) {
      return request.resource.data.diff(resource.data).affectedKeys().hasOnly(allowedFields);
    }
    
    // ============================================
    // USERS COLLECTION
    // ============================================
    
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isSignedIn();
      
      // Only the user can create their own profile
      allow create: if isOwner(userId);
      
      // User can update their own profile, OR
      // System can update follower/following counts (for atomic operations)
      allow update: if isOwner(userId) 
                    || (isSignedIn() && onlyUpdatingFields(['followersCount', 'followingCount']));
      
      // Only the user can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // FOLLOWS COLLECTION (NEW)
    // ============================================
    
    match /follows/{followId} {
      // Anyone authenticated can read follows
      // This allows checking follow status and displaying follower/following lists
      allow read: if isSignedIn();
      
      // Only the follower can create their own follow relationship
      // Ensures users can only follow as themselves, not impersonate others
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.followerId;
      
      // Only the follower can delete their own follow (unfollow)
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.followerId;
      
      // No updates allowed - follows are immutable (create/delete only)
      allow update: if false;
    }
    
    // ============================================
    // FOLLOW REQUESTS COLLECTION (NEW)
    // ============================================
    
    match /followRequests/{requestId} {
      // Users can read requests where they are the sender or recipient
      allow read: if isSignedIn() 
                  && (request.auth.uid == resource.data.fromUserId 
                      || request.auth.uid == resource.data.toUserId);
      
      // Anyone can create a follow request (as themselves)
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.fromUserId;
      
      // Only the recipient can update the request (accept/reject)
      allow update: if isSignedIn() 
                    && request.auth.uid == resource.data.toUserId
                    && onlyUpdatingFields(['status']);
      
      // Only the sender can delete the request (cancel)
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.fromUserId;
    }
    
    // ============================================
    // POSTS COLLECTION
    // ============================================
    
    match /posts/{postId} {
      // Anyone authenticated can read posts
      allow read: if isSignedIn();
      
      // Only authenticated users can create posts
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.authorId;
      
      // Only post author can update their own posts, OR
      // System can update interaction counts
      allow update: if isOwner(resource.data.authorId)
                    || (isSignedIn() && onlyUpdatingFields(['amenCount', 'commentCount', 'shareCount', 'viewCount']));
      
      // Only post author can delete their own posts
      allow delete: if isOwner(resource.data.authorId);
    }
    
    // ============================================
    // COMMENTS COLLECTION
    // ============================================
    
    match /comments/{commentId} {
      // Anyone authenticated can read comments
      allow read: if isSignedIn();
      
      // Only authenticated users can create comments
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.authorId;
      
      // Only comment author can update their own comments
      allow update: if isOwner(resource.data.authorId)
                    || (isSignedIn() && onlyUpdatingFields(['amenCount', 'replyCount']));
      
      // Only comment author can delete their own comments
      allow delete: if isOwner(resource.data.authorId);
    }
    
    // ============================================
    // MESSAGES / CONVERSATIONS
    // ============================================
    
    match /conversations/{conversationId} {
      // Only participants can read the conversation
      allow read: if isSignedIn() 
                  && request.auth.uid in resource.data.participantIds;
      
      // Only participants can create messages in the conversation
      allow create: if isSignedIn() 
                    && request.auth.uid in request.resource.data.participantIds;
      
      // Only participants can update the conversation
      allow update: if isSignedIn() 
                    && request.auth.uid in resource.data.participantIds;
      
      // Participants can delete their participation (leave conversation)
      allow delete: if isSignedIn() 
                    && request.auth.uid in resource.data.participantIds;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Only conversation participants can read messages
        allow read: if isSignedIn() 
                    && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        
        // Only sender can create messages
        allow create: if isSignedIn() 
                      && request.auth.uid == request.resource.data.senderId
                      && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        
        // Only sender can update their own messages (for edit/reactions)
        allow update: if isSignedIn() 
                      && request.auth.uid == resource.data.senderId;
        
        // Only sender can delete their own messages
        allow delete: if isSignedIn() 
                      && request.auth.uid == resource.data.senderId;
      }
    }
    
    // ============================================
    // NOTIFICATIONS COLLECTION
    // ============================================
    
    match /notifications/{notificationId} {
      // Only the notification recipient can read their notifications
      allow read: if isSignedIn() 
                  && request.auth.uid == resource.data.userId;
      
      // System can create notifications (any authenticated user)
      allow create: if isSignedIn();
      
      // Only recipient can update their own notifications (mark as read)
      allow update: if isSignedIn() 
                    && request.auth.uid == resource.data.userId
                    && onlyUpdatingFields(['isRead', 'readAt']);
      
      // Only recipient can delete their own notifications
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.userId;
    }
    
    // ============================================
    // PRAYER REQUESTS COLLECTION
    // ============================================
    
    match /prayerRequests/{requestId} {
      // Anyone authenticated can read prayer requests
      allow read: if isSignedIn();
      
      // Only authenticated users can create prayer requests
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.authorId;
      
      // Only author can update their own prayer requests
      allow update: if isOwner(resource.data.authorId)
                    || (isSignedIn() && onlyUpdatingFields(['prayerCount', 'commentCount']));
      
      // Only author can delete their own prayer requests
      allow delete: if isOwner(resource.data.authorId);
    }
    
    // ============================================
    // COMMUNITIES COLLECTION
    // ============================================
    
    match /communities/{communityId} {
      // Anyone authenticated can read public communities
      allow read: if isSignedIn() 
                  && (resource.data.isPrivate == false 
                      || request.auth.uid in resource.data.memberIds
                      || request.auth.uid == resource.data.creatorId);
      
      // Only authenticated users can create communities
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.creatorId;
      
      // Only creator or admins can update the community
      allow update: if isSignedIn() 
                    && (request.auth.uid == resource.data.creatorId 
                        || request.auth.uid in resource.data.adminIds);
      
      // Only creator can delete the community
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.creatorId;
    }
    
    // ============================================
    // SAVED POSTS / BOOKMARKS
    // ============================================
    
    match /userSavedPosts/{userId}/saved/{postId} {
      // Only the user can read their saved posts
      allow read: if isOwner(userId);
      
      // Only the user can save posts
      allow create: if isOwner(userId);
      
      // Only the user can update their saved posts metadata
      allow update: if isOwner(userId);
      
      // Only the user can unsave posts
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // REPOSTS
    // ============================================
    
    match /reposts/{repostId} {
      // Anyone authenticated can read reposts
      allow read: if isSignedIn();
      
      // Only authenticated users can create reposts
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.userId;
      
      // No updates allowed for reposts
      allow update: if false;
      
      // Only the user who reposted can delete the repost
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.userId;
    }
    
    // ============================================
    // BLOCKED USERS
    // ============================================
    
    match /blockedUsers/{blockId} {
      // Only the blocker can read their blocked list
      allow read: if isSignedIn() 
                  && request.auth.uid == resource.data.blockerId;
      
      // Only authenticated users can block others
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.blockerId;
      
      // No updates allowed for blocks
      allow update: if false;
      
      // Only the blocker can unblock
      allow delete: if isSignedIn() 
                    && request.auth.uid == resource.data.blockerId;
    }
    
    // ============================================
    // REPORTS
    // ============================================
    
    match /reports/{reportId} {
      // Only admins can read reports (implement admin check)
      allow read: if false; // TODO: Add admin role check
      
      // Any authenticated user can create reports
      allow create: if isSignedIn() 
                    && request.auth.uid == request.resource.data.reporterId;
      
      // Only admins can update reports (resolve, etc.)
      allow update: if false; // TODO: Add admin role check
      
      // No deletion of reports
      allow delete: if false;
    }
    
    // ============================================
    // USER SETTINGS
    // ============================================
    
    match /userSettings/{userId} {
      // Only the user can read their settings
      allow read: if isOwner(userId);
      
      // Only the user can create their settings
      allow create: if isOwner(userId);
      
      // Only the user can update their settings
      allow update: if isOwner(userId);
      
      // Only the user can delete their settings
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // ANALYTICS / METRICS (Optional)
    // ============================================
    
    match /userAnalytics/{userId} {
      // Only the user can read their analytics
      allow read: if isOwner(userId);
      
      // System can write analytics
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      
      // Only user can delete their analytics
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // DEFAULT DENY
    // ============================================
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
